
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/datatable_layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                @*<div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>*@
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Data Table Department</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                   
                    <!-- /.card -->
                    
                    <div class="modal fade" id="modal-default">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="modalLabel"></h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="cleandata();">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                @* add data departemen *@
                                <form id="addDepartment" method="POST" onsubmit="save(event)" class="d-none">
                                    <div class="modal-body">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Name</span>
                                            </div>
                                            <input id="addDepartmentName" name="addDepartmentName" type="text" 
                                                class="form-control" placeholder="Department name" aria-label="department-name" aria-describedby="basic-addon1">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary" data-tooltip="tooltip" data-placement="right" title="Add new department">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </form>

                                @* edit data departemen *@
                                <form id="editDepartment" method="POST" onsubmit="update(event)" class="d-none">
                                    <div class="modal-body">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Department ID</span>
                                            </div>
                                            <input id="editDepartmentId" name="editDepartmentId" type="text" class="form-control" placeholder="Department Id" aria-label="department-id" aria-describedby="basic-addon1" readonly>
                                        </div>

                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Name</span>
                                            </div>
                                            <input id="editDepartmentName" name="editDepartmentName" type="text" class="form-control" placeholder="Department name" aria-label="department-name" aria-describedby="basic-addon1">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-warning" data-tooltip="tooltip" data-placement="right" title="Edit department">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </form>

                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- /.modal -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Data Table Department</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-6" style="">
                                    <div class="dt-buttons btn-group flex-wrap">
                                        <button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>Copy</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>CSV</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>Excel</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>PDF</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-print" tabindex="0" aria-controls="example1" type="button">
                                            <span>Print</span>
                                        </button>
                                        <div class="btn-group">
                                            <button class="btn btn-secondary buttons-collection dropdown-toggle buttons-colvis" tabindex="0" aria-controls="example1" type="button" aria-haspopup="true" aria-expanded="false" style="">
                                                <span>Column visibility</span>
                                                <span class="dt-down-arrow"></span>
                                            </button>
                                        </div>
                                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-tooltip="tooltip" data-placement="right" data-target="#modal-default" title="Add new department"
                                                onclick="setAddDepartmentModal()">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>No.</th>
                                        <th>Departemen Id</th>
                                        <th>Nama Departemen</th>
                                    </tr>
                                </thead>
                               
                                @* <tbody>
                                    
                                </tbody>*@
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

