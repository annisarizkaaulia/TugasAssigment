    <script src="~/adminlte-3.2.0/docs/assets/js/demo.js"></script>
    
    <!-- Page specific script -->
    <script src="~/js/department.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}

