
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/datatable_layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Data Table Employee</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- /.card -->
                    <!-- /.modal -->
                    <div class="card" id="ActiveEmployee">
                        <div class="card-header">
                            <h3 class="card-title">Active Employee Data</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-6" style="">
                                    <div class="dt-buttons btn-group flex-wrap">
                                        <button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>Copy</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>CSV</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>Excel</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="example1" type="button">
                                            <span>PDF</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-print" tabindex="0" aria-controls="example1" type="button">
                                            <span>Print</span>
                                        </button>
                                        <button type="button" class="btn btn-secondary" data-tooltip="tooltip" data-placement="right"
                                                data-target="#InactiveEmployee" title="Inactive Employee Data"
                                                onclick="InactiveEmployee(event)">
                                            <i class="fas fa-user-slash"></i>
                                        </button>
                                        <button type="button" class="btn btn-secondary" data-tooltip="tooltip" data-placement="right"
                                                data-target="#ActiveEmployee" title="Active Employee Data"
                                                onclick="ActiveEmployee(event)">
                                            <i class="fas fa-user-check"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>NIK</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Address</th>
                                        <th>Status</th>
                                        <th>Departemen Id</th>
                                        <th>Departemen Name</th>
                                    </tr>
                                </thead>

                                @* <tbody>

                                </tbody>*@
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>

                    <div class="card d-none" id="InactiveEmployee">
                        <div class="card-header">
                            <h3 class="card-title">Inactive Employee Data</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-6" style="">
                                    <div class="dt-buttons btn-group flex-wrap">
                                        <button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="example2" type="button">
                                            <span>Copy</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="example2" type="button">
                                            <span>CSV</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="example2" type="button">
                                            <span>Excel</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="example2" type="button">
                                            <span>PDF</span>
                                        </button>
                                        <button class="btn btn-secondary buttons-print" tabindex="0" aria-controls="example2" type="button">
                                            <span>Print</span>
                                        </button>
                                        <button type="button" class="btn btn-secondary" data-tooltip="tooltip" data-placement="right"
                                                data-target="#InactiveEmployee" title="Inactive Employee Data"
                                                onclick="InactiveEmployee(event)">
                                            <i class="fas fa-user-slash"></i>
                                        </button>
                                        <button type="button" class="btn btn-secondary" data-tooltip="tooltip" data-placement="right"
                                                data-target="#ActiveEmployee" title="Active Employee Data"
                                                onclick="ActiveEmployee(event)">
                                            <i class="fas fa-user-check"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <table id="example2" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>NIK</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Address</th>
                                        <th>Status</th>
                                        <th>Departemen Id</th>
                                        <th>Departemen Name</th>
                                    </tr>
                                </thead>
                                @*<tbody>

                                </tbody>*@
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>

                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
